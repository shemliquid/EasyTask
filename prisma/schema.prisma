generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  role     Role     @default(TA)
  name     String?
  createdAt DateTime @default(now())
}

enum Role {
  TA
  LECTURER
}

model Student {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  indexNumber      String   @unique
  name             String?
  assignmentCount  Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([assignmentCount])  // For stats aggregation queries
  @@index([name])              // For name-based searches
}

model FlaggedRecord {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  indexNumber String
  name        String?
  issueType   String   // DUPLICATE_INDEX | MISSING_NAME | CONFLICT
  source      String   // manual | excel
  resolved    Boolean  @default(false)
  resolution  String?  // edit | merge | approved
  assignmentCount Int   @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([indexNumber, resolved])  // Compound index for common query pattern
  @@index([resolved])                // For filtering by resolution status
  @@index([issueType])               // For filtering by issue type
}

model LookupLink {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  token      String   @unique
  createdBy  String   @db.ObjectId
  active     Boolean  @default(true)
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@index([token, active, expiresAt])  // Compound index for lookup queries
  @@index([expiresAt])                  // For cleanup queries
  @@index([active])                     // For filtering active links
}
